{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/frontend/*": ["./src/app/frontend/*"],
      "@/api/*": ["./src/app/api/*"],
      "@/domain/*": ["./src/app/api/domain/*"],
      "@/data/*": ["./src/app/api/data/*"],
      "@/infra/*": ["./src/app/api/infra/*"],
      "@/presentation/*": ["./src/app/api/presentation/*"],
      "@/main/*": ["./src/app/api/main/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
